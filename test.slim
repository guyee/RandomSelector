      thing = function (description) {
        this.desc = description;
        this.children = [];
        var _this = this;
        this.generate = function (new_desc) {
          var new_thing = new thing(new_desc)
          _this.children.push(new_thing);
          return new_thing;
        }
        this.get_random = function () {
          var die1 = Math.floor((Math.random()*_this.children.length));
          return _this.children[die1];
        }
      }

